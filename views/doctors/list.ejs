<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Doctors</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Doctors</h2>
    <div class="flex justify-between items-center mb-4">
      <% if (user.role === "admin") { %>
        <a href="/doctors/add" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md">
          ‚ûï Add Doctor
        </a>
      <% } %>
      <a href="/" class="text-sm text-gray-500 hover:underline">üè† Home</a>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white rounded-lg shadow">
        <thead>
          <tr>
            <th class="py-2 px-4">Name</th>
            <th class="py-2 px-4">Specialization</th>
            <th class="py-2 px-4">Experience</th>
            <th class="py-2 px-4">Contact</th>
            <th class="py-2 px-4">Email</th>
          </tr>
        </thead>
        <tbody>
          <% doctors.forEach(doctor => { %>
            <tr class="border-t">
              <td class="py-2 px-4"><%= doctor.name %></td>
              <td class="py-2 px-4"><%= doctor.specialization %></td>
              <td class="py-2 px-4"><%= doctor.experience %> yrs</td>
              <td class="py-2 px-4"><%= doctor.contactNumber %></td>
              <td class="py-2 px-4"><%= doctor.email %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <% if (!doctors.length) { %>
        <div class="mt-8 text-center text-gray-600">No doctors found.</div>
      <% } %>
    </div>
  </div>
</body>
</html>
