<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Doctor Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-blue-50 min-h-screen">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8 text-center">
      <h2 class="text-3xl font-bold text-blue-900">👨‍⚕️ Welcome, Dr. <%= doctor.name %></h2>
      <p class="text-gray-700 mt-2 text-lg"><%= doctor.specialization %> | <%= doctor.experience %> years experience</p>
      <p class="text-gray-400 text-sm mt-0.5"><%= doctor.email %> | <%= doctor.contactNumber %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h3 class="text-xl font-semibold mb-4 text-blue-700">Upcoming Appointments</h3>
      <% if (appointments.length === 0) { %>
        <div class="text-gray-500">No upcoming appointments.</div>
      <% } else { %>
        <table class="min-w-full bg-white">
          <thead>
            <tr>
              <th class="py-2 px-2">Patient</th>
              <th class="py-2 px-2">Date</th>
              <th class="py-2 px-2">Reason</th>
              <th class="py-2 px-2">Status</th>
            </tr>
          </thead>
          <tbody>
            <% appointments.forEach(app => { %>
              <tr class="border-t">
                <td class="py-2 px-2"><%= app.patient && app.patient.name %></td>
                <td class="py-2 px-2"><%= new Date(app.appointmentDate).toLocaleString() %></td>
                <td class="py-2 px-2"><%= app.reason %></td>
                <td class="py-2 px-2"><span class="rounded bg-indigo-100 px-2 text-indigo-900"><%= app.status %></span></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
    <div class="flex justify-between mt-6">
      <a href="/appointments/view" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition">📋 All Appointments</a>
      <a href="/logout" class="bg-red-500 hover:bg-red-700 text-white px-4 py-2 rounded transition">Logout</a>
    </div>
  </div>
</body>
</html>